.section
  .container
    h1 Hi #{current_user.first_name}
    h2 Thanks for keeping track of your hours!

.section
  .container
    = render 'form'

.section
  .container
    .bar-header Your family's contributions this year.

    .bar-stat
      h3 #{number_with_precision(@total_task_hours, precision: 2, strip_insignificant_zeros: true)} / #{@required_hours} hrs

    .bar-percent
      h3
        = "#{@percent_done.round}%"

    .bar-chart
      - if @percent_done <= 100
        .bar style="width:#{@percent_done}%"
      - else
        .bar-over style="width:#{@percent_over}%"

.section
  .container
    table
      thead
        tr
          th Task
          th Done By
          th Notes
          th Submitted on
          th Hours
          th
      tbody
        - @tasks.each do |task|
          tr
            td = task.task_type.name
            td = task.user.first_name
            td = task.notes
            td = task.created_at.to_s(:task_date)
            td.number = task.hours
            td = link_to "EDIT", edit_task_path(task)
      tfoot
        tr
          td Total
          td colspan="3"
          td.number = @total_task_hours
          td
