doctype html
html
  head
    title Parentportal
    = csrf_meta_tags

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  body
    ul.topnav
      li
        a.active href="#home"
          | Home
      li
        = link_to "My Hours", tasks_path
      li
        - if user_signed_in?
          = link_to "Logout", destroy_user_session_path, method: :delete
        - else
          = link_to "Login", new_user_session_path

      li.icon
        <a href="javascript:void(0);" style="font-size:15px;" onclick="toggleNav()">â˜°</a>

    p.notice
      = notice
    p.alert
      = alert

    = yield
